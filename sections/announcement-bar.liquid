<div class="top-header bg-[{{ sections.settings.background_color }}] py-[.375rem] max-[61.9375rem]:hidden">
  <div class="flex flex-wrap justify-between relative items-center mx-auto min-[87.5rem]:max-w-[82.5rem] min-[75rem]:max-w-[71.25rem] min-[62rem]:max-w-[60rem] min-[48rem]:max-w-[45rem] min-[36rem]:max-w-[33.75rem]">
    <div class="flex flex-wrap w-full">
      <div class="w-full px-[.75rem]">
        <div class="inner-top-header flex justify-between">
          <div class="col-left-bar">
            <a
              href="{{ sections.settings.announcement-link }}"
              class="transition-all duration-[0.3s] ease-in-out font-Poppins font-light text-[.875rem] text-[{{ sections.settings.text_color }}] leading-[1.75rem] tracking-[.48px]"
            >
              {{- section.settings.announcement_text }}.</a
            >
          </div>
          <div class="col-right-bar flex">
            <div class="cols px-[.75rem]">
              <a
                href="faq.html"
                class="transition-all duration-[0.3s] ease-in-out font-Poppins text-[.875rem] text-[#fff] font-light leading-[1.75rem] tracking-[.48px]"
                >Help?</a
              >
            </div>
            <div class="cols px-[.75rem]">
              <div class="custom-dropdown relative z-[5]">
                <a
                  class="bb-dropdown-toggle transition-all duration-[0.3s] ease-in-out font-Poppins text-[.875rem] text-[#fff] relative pr-[.9375rem] font-light leading-[1.75rem] tracking-[.48px]"
                  href="#"
                  >Currency</a
                >
                <ul class="dropdown transition-all duration-[0.3s] ease-in-out min-w-[9.375rem] py-[.625rem] px-[.625rem] mt-[1.5625rem] absolute z-[16] text-left opacity-[0] invisible left-[0] right-[auto] bg-[#fff] block border-[.0625rem] border-solid border-[#eee] block rounded-[.625rem]">
                  <li class="font-Poppins text-[.9375rem] text-[#686e7d] font-light leading-[1.75rem] tracking-[.48px]">
                    <a
                      href="javascript:void(0)"
                      class="transition-all duration-[0.3s] ease-in-out text-[.8125rem] text-[#686e7d] hover:text-[#6c7fd8] font-normal font-Poppins py-[.75rem] block leading-[1.75rem] tracking-[.48px]"
                      >USD $</a
                    >
                  </li>
                  <li class="font-Poppins text-[.9375rem] text-[#686e7d] font-light leading-[1.75rem] tracking-[.48px]">
                    <a
                      href="javascript:void(0)"
                      class="transition-all duration-[0.3s] ease-in-out text-[.8125rem] text-[#686e7d] hover:text-[#6c7fd8] font-normal font-Poppins py-[.75rem] block leading-[1.75rem] tracking-[.48px]"
                      >EUR â‚¬</a
                    >
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Announcement Bar",
  "class": "announcement-bar",
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "Free shipping on orders over $50"
    },
    {
      "type": "url",
      "id": "announcement-link",
      "label": "Announcement Link"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#3d4750"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}
