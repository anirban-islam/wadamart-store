<div
  class="top-header  py-[.375rem] max-[61.9375rem]:hidden"
  style="background: {{- section.settings.background_color -}};"
>
  <div class="flex flex-wrap justify-between relative items-center mx-auto min-[87.5rem]:max-w-[82.5rem] min-[75rem]:max-w-[71.25rem] min-[62rem]:max-w-[60rem] min-[48rem]:max-w-[45rem] min-[36rem]:max-w-[33.75rem]">
    <div class="flex flex-wrap w-full">
      <div class="w-full px-[.75rem]">
        <div class="inner-top-header flex justify-between">
          <div class="col-left-bar">
            <a
              href="{{ section.settings.announcement-link }}"
              class="transition-all duration-[0.3s] ease-in-out font-Poppins font-light   leading-[1.75rem] tracking-[.48px]"
              style="color: {{- section.settings.text_color -}}; font-size: {{ section.settings.announcement_font_size }}px;"
            >
              {{- section.settings.announcement_text }}
            </a>
          </div>
          <div class="col-right-bar flex">
            <div class="cols px-[.75rem]">
              <a
                href="{{ shop.url }}/pages/contact-us"
                class="transition-all duration-[0.3s] ease-in-out font-Poppins text-[.875rem]  font-light leading-[1.75rem] tracking-[.48px]"
                style="color: {{- section.settings.text_color -}}; font-size: {{ section.settings.announcement_font_size }}px; "
                >Help?</a
              >
            </div>
            <div class="relative">
              <button
                class="flex items-center gap-0 px-4 py-1 rounded-full  text-white font-light shadow transition hover:from-purple-500 hover:to-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-400"
                popovertarget="popover-1"
                style="anchor-name:--anchor-1"
              >
                Currency
                <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              <ul
                class="dropdown menu absolute right-0 mt-2 w-40 text-white rounded-lg bg-gradient-to-br from-gray-900 via-gray-800 to-gray-700 shadow-lg ring-1 ring-black/10 z-50"
                popover
                id="popover-1"
                style="position-anchor:--anchor-1"
              >
                <li>
                  <a href="#" class="block px-4 py-2 hover:bg-indigo-600 rounded transition text-white"
                    >USD - US Dollar</a
                  >
                </li>
                <li>
                  <a href="#" class="block px-4 py-2 hover:bg-indigo-600 rounded transition text-white">EUR - Euro</a>
                </li>
                <li>
                  <a href="#" class="block px-4 py-2 hover:bg-indigo-600 rounded transition text-white">GBP - Pound</a>
                </li>
              </ul>
            </div>
            <div></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Announcement Bar",
  "class": "announcement-bar",
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "Free shipping on orders over $50"
    },
    {
      "type": "range",
      "id": "announcement_font_size",
      "min": 12,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Announcement Font Size",
      "default": 12
    },
    {
      "type": "url",
      "id": "announcement-link",
      "label": "Announcement Link"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#3d4750"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "category": "Header"
    }
  ]
}
{% endschema %}
