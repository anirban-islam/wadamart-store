<div
  class="top-header  py-[.375rem] max-[61.9375rem]:hidden"
  style="background: {{- section.settings.background_color -}};"
>
  <div class="flex flex-wrap justify-between relative items-center mx-auto min-[87.5rem]:max-w-[82.5rem] min-[75rem]:max-w-[71.25rem] min-[62rem]:max-w-[60rem] min-[48rem]:max-w-[45rem] min-[36rem]:max-w-[33.75rem]">
    <div class="flex flex-wrap w-full">
      <div class="w-full px-[.75rem]">
        <div class="inner-top-header flex justify-between">
          <div class="col-left-bar">
            <a
              href="{{ section.settings.announcement-link }}"
              class="transition-all duration-[0.3s] ease-in-out font-Poppins font-light text-[.875rem]  leading-[1.75rem] tracking-[.48px]"
              style="color: {{- section.settings.text_color -}}"
            >
              {{- section.settings.announcement_text }}.
            </a>
          </div>
          <div class="col-right-bar flex">
            <div class="cols px-[.75rem]">
              <a
                href="faq.html"
                class="transition-all duration-[0.3s] ease-in-out font-Poppins text-[.875rem]  font-light leading-[1.75rem] tracking-[.48px]"
                style="color: {{- section.settings.text_color -}}"
                >Help?</a
              >
            </div>
            <div class="cols px-[.75rem]">
              <div class="custom-dropdown relative z-[5] group">
              <a
                class="bb-dropdown-toggle transition-all duration-300 ease-in-out font-Poppins font-light text-[.875rem] relative pr-4 leading-7 tracking-[.48px] cursor-pointer flex items-center"
                href="#"
                style="color: {{ section.settings.text_color }}"
                onclick="event.preventDefault(); this.parentElement.classList.toggle('open');"
              >
                {{ cart.currency.iso_code | default: 'USD' }} 
                <svg class="ml-1 w-3 h-3 inline-block transition-transform duration-300 group-[.open]:rotate-180" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M19 9l-7 7-7-7"/></svg>
              </a>
              <ul
                class="dropdown transition-all duration-300 ease-in-out min-w-[9.375rem] py-2 px-2 mt-6 absolute z-20 text-left opacity-0 invisible left-0 right-auto block border border-solid border-[#eee] rounded-lg group-hover:opacity-100 group-hover:visible group-open:opacity-100 group-open:visible bg-white shadow-lg"
                style="background: {{ section.settings.background_color }}"
              >
                {% assign currencies = shop.enabled_currencies | default: "USD,EUR,GBP" | split: ',' %}
                {% for currency in currencies %}
                <li
                  class="font-Poppins text-[.9375rem] font-light leading-7 tracking-[.48px] hover:bg-[#f5f5f5] rounded transition"
                  style="color: {{ section.settings.text_color }}"
                >
                  <a
                  href="?currency={{ currency | strip }}"
                  class="transition-all duration-300 ease-in-out text-[.8125rem] block py-3 px-2 leading-7 tracking-[.48px] hover:text-[#6c7fd8] font-normal font-Poppins"
                  style="color: {{ section.settings.text_color }};"
                  >
                  {{ currency | strip }}
                  {% if currency == cart.currency.iso_code %} <span class="ml-1 text-xs text-[#6c7fd8]">(Selected)</span>{% endif %}
                  </a>
                </li>
                {% endfor %}
              </ul>
              </div>
            </div>
                <div class="custom-dropdown relative z-[5] group">
                <a
                  class="bb-dropdown-toggle transition-all duration-[0.3s] ease-in-out font-Poppins font-light text-[.875rem]  relative pr-[.9375rem]  leading-[1.75rem] tracking-[.48px] cursor-pointer flex items-center"
                  href="#"
                  style="color: {{- section.settings.text_color -}}"
                  >Currency
                  <svg class="ml-1 w-3 h-3 inline-block" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M19 9l-7 7-7-7"/></svg>
                </a>
                <ul
                  class="dropdown transition-all duration-[0.3s] ease-in-out min-w-[9.375rem] py-[.625rem] px-[.625rem] mt-[1.5625rem] absolute z-[16] text-left opacity-0 invisible left-0 right-auto block border-[.0625rem] border-solid border-[#eee] rounded-[.625rem] group-hover:opacity-100 group-hover:visible"
                  style="background: {{- section.settings.background_color -}}"
                >
                  <li
                  class="font-Poppins text-[.9375rem] font-light leading-[1.75rem] tracking-[.48px]"
                  style="color: {{- section.settings.text_color -}}"
                  >
                  <a
                    href="javascript:void(0)"
                    class="transition-all duration-[0.3s] ease-in-out text-[.8125rem] text-[#686e7d] hover:text-[#6c7fd8] font-normal font-Poppins py-[.75rem] block leading-[1.75rem] tracking-[.48px]"
                    >USD $</a
                  >
                  </li>
                  <li class="font-Poppins text-[.9375rem] text-[{{- section.settings.text_color -}}] font-light leading-[1.75rem] tracking-[.48px]">
                  <a
                    href="javascript:void(0)"
                    class="transition-all duration-[0.3s] ease-in-out text-[.8125rem] text-[{{- section.settings.text_color -}}] hover:text-[#6c7fd8] font-normal font-Poppins py-[.75rem] block leading-[1.75rem] tracking-[.48px]"
                    >EUR €</a
                  >
                  </li>
                </ul>
                </div>
                <a
                  class="bb-dropdown-toggle transition-all duration-[0.3s] ease-in-out font-Poppins font-light text-[.875rem]  relative pr-[.9375rem]  leading-[1.75rem] tracking-[.48px]"
                  href="#"
                  style="color: {{- section.settings.text_color -}}"
                  >Currency</a
                >
                <ul
                  class="dropdown transition-all duration-[0.3s] ease-in-out min-w-[9.375rem] py-[.625rem] px-[.625rem] mt-[1.5625rem] absolute z-[16] text-left opacity-[0] invisible left-[0] right-[auto]  block border-[.0625rem] border-solid border-[#eee]  rounded-[.625rem]"
                  style="background: {{- section.settings.background_color -}}"
                >
                  <li
                    class="font-Poppins text-[.9375rem]  font-light leading-[1.75rem] tracking-[.48px]"
                    style="color: {{- section.settings.text_color -}}"
                  >
                    <a
                      href="javascript:void(0)"
                      class="transition-all duration-[0.3s] ease-in-out text-[.8125rem] text-[#686e7d] hover:text-[#6c7fd8] font-normal font-Poppins py-[.75rem] block leading-[1.75rem] tracking-[.48px]"
                      >USD $</a
                    >
                  </li>
                  <li class="font-Poppins text-[.9375rem] text-[{{- section.settings.text_color -}}] font-light leading-[1.75rem] tracking-[.48px]">
                    <a
                      href="javascript:void(0)"
                      class="transition-all duration-[0.3s] ease-in-out text-[.8125rem] text-[{{- section.settings.text_color -}}] hover:text-[#6c7fd8] font-normal font-Poppins py-[.75rem] block leading-[1.75rem] tracking-[.48px]"
                      >EUR €</a
                    >
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Announcement Bar",
  "class": "announcement-bar",
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "Free shipping on orders over $50"
    },
    {
      "type": "url",
      "id": "announcement-link",
      "label": "Announcement Link"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#3d4750"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "category": "Header"
    }
  ]
}
{% endschema %}
